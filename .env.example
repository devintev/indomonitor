# =============================================================================
# Database Connection Credentials
# =============================================================================
# Pattern: {CONNECTION_NAME}_MYSQL_{PARAMETER}
#
# Define credentials for each connection defined in config/database.yaml
# Connection names should match those in the config file
# =============================================================================

# VOSSCLOUD Connection (MySQL on local LAN)
VOSSCLOUD_MYSQL_HOST=vosscloud
VOSSCLOUD_MYSQL_PORT=3306
VOSSCLOUD_MYSQL_USER=root
VOSSCLOUD_MYSQL_PASSWORD=your_password_here

# PRODUCTION Connection (Remote MySQL)
PRODUCTION_MYSQL_HOST=production.example.com
PRODUCTION_MYSQL_PORT=3306
PRODUCTION_MYSQL_USER=app_user
PRODUCTION_MYSQL_PASSWORD=your_production_password_here

# STAGING Connection (Staging MySQL)
STAGING_MYSQL_HOST=staging.example.com
STAGING_MYSQL_PORT=3306
STAGING_MYSQL_USER=app_user
STAGING_MYSQL_PASSWORD=your_staging_password_here

# LOCAL Connection (Local Docker MySQL)
LOCAL_MYSQL_HOST=localhost
LOCAL_MYSQL_PORT=3306
LOCAL_MYSQL_USER=root
LOCAL_MYSQL_PASSWORD=local_dev_password

# =============================================================================
# Application Settings
# =============================================================================

# Environment (development, staging, production)
APP_ENV=development

# Logging
LOG_LEVEL=INFO
